<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lista de Tareas</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <header>
        <h1>Lista de Tareas Daniel siuuuu 😎</h1>

    </header>
    <!-- Formulario para agregar tarea -->
    <main>
        <form class="form-agreg" action="/agregar" method="POST">
            <input class="text-input" type="text" name="tarea" placeholder="Nueva tarea" required>
            <button type="submit">Agregar tarea</button>
        </form>
    
        <!-- Lista de tareas -->
        <section class="sect">
            <div class="tarjet">
                <ul>
                    <% tareas.forEach(function(tarea) { %>
                        <li><%= tarea %>
                            <form action="/eliminar/<%= tarea %>?_method=DELETE" method="POST">
                                <button type="submit">Eliminar</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </section>
    </main>
</body>
</html>
